{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
